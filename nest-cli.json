{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "defaultLibraryPrefix": "@library",
  "sourceRoot": "apps/client/src",
  "monorepo": true,
  "root": "apps/client",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "tsc",
    "tsConfigPath": "apps/client/tsconfig.app.json"
  },
  "projects": {
    "administration": {
      "type": "application",
      "root": "apps/administration",
      "entryFile": "main",
      "sourceRoot": "apps/administration/src",
      "compilerOptions": {
        "tsConfigPath": "apps/administration/tsconfig.app.json"
      }
    },
    "client": {
      "type": "application",
      "root": "apps/client",
      "entryFile": "main",
      "sourceRoot": "apps/client/src",
      "compilerOptions": {
        "tsConfigPath": "apps/client/tsconfig.app.json",
        "assets": [
          {
            "include": "**/*.mjml.mustache",
            "watchAssets": true,
            "outDir": "dist/client/apps/client/src"
          }
        ]
      }
    },
    "authentication": {
      "type": "library",
      "root": "libs/authentication",
      "entryFile": "index",
      "sourceRoot": "libs/authentication/src",
      "compilerOptions": {
        "tsConfigPath": "libs/authentication/tsconfig.lib.json"
      }
    },
    "configuration": {
      "type": "library",
      "root": "libs/configuration",
      "entryFile": "index",
      "sourceRoot": "libs/configuration/src",
      "compilerOptions": {
        "tsConfigPath": "libs/configuration/tsconfig.lib.json"
      }
    },
    "database": {
      "type": "library",
      "root": "libs/database",
      "entryFile": "index",
      "sourceRoot": "libs/database/src",
      "compilerOptions": {
        "tsConfigPath": "libs/database/tsconfig.lib.json"
      }
    },
    "mail": {
      "type": "library",
      "root": "libs/mail",
      "entryFile": "index",
      "sourceRoot": "libs/mail/src",
      "compilerOptions": {
        "tsConfigPath": "libs/mail/tsconfig.lib.json"
      }
    },
    "password-reset": {
      "type": "library",
      "root": "libs/password-reset",
      "entryFile": "index",
      "sourceRoot": "libs/password-reset/src",
      "compilerOptions": {
        "tsConfigPath": "libs/password-reset/tsconfig.lib.json"
      }
    },
    "s3": {
      "type": "library",
      "root": "libs/s3",
      "entryFile": "index",
      "sourceRoot": "libs/s3/src",
      "compilerOptions": {
        "tsConfigPath": "libs/s3/tsconfig.lib.json"
      }
    }
  }
}
